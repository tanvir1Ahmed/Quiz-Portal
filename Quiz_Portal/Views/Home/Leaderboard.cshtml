@{
    ViewData["Title"] = "Leaderboard";
}

<style>
    .leaderboard-item {
        border-left: 4px solid transparent;
        transition: all 0.2s ease;
    }
    .leaderboard-item.rank-1 {
        border-left-color: #ffc107;
        background: linear-gradient(90deg, rgba(255,193,7,0.1) 0%, transparent 100%);
    }
    .leaderboard-item.rank-2 {
        border-left-color: #6c757d;
        background: linear-gradient(90deg, rgba(108,117,125,0.1) 0%, transparent 100%);
    }
    .leaderboard-item.rank-3 {
        border-left-color: #cd7f32;
        background: linear-gradient(90deg, rgba(205,127,50,0.1) 0%, transparent 100%);
    }
    .rank-badge {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.9rem;
    }
    .rank-1 .rank-badge { background: #ffc107; color: #000; }
    .rank-2 .rank-badge { background: #6c757d; color: #fff; }
    .rank-3 .rank-badge { background: #cd7f32; color: #fff; }
</style>

<div class="container py-2 py-md-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="text-center mb-3 mb-md-4">
                <i class="fas fa-trophy text-warning" style="font-size: 2.5rem;"></i>
                <h1 class="fw-bold mt-2" style="font-size: 1.5rem;">Leaderboard</h1>
                <p class="text-muted small mb-0">Top performers in Bangladesh Quiz</p>
            </div>

            <!-- User Rank Card -->
            <div id="userRankCard" class="card shadow-sm mb-3 border-success d-none">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="text-center me-3">
                                <div class="h4 fw-bold text-success mb-0" id="myRank">#0</div>
                                <small class="text-muted" style="font-size: 0.7rem;">Your Rank</small>
                            </div>
                            <div>
                                <h6 class="mb-0" id="myName">-</h6>
                                <small class="text-muted" id="myPhone">-</small>
                            </div>
                        </div>
                        <div class="text-end">
                            <h5 class="text-success mb-0"><span id="myScore">0</span>/<span id="myTotal">20</span></h5>
                            <small class="text-muted"><span id="myPercentage">0</span>%</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Leaderboard List (Mobile-Friendly) -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white py-2">
                    <h6 class="mb-0"><i class="fas fa-list-ol me-2"></i>Top 50</h6>
                </div>
                <div class="card-body p-0">
                    <div id="leaderboardList">
                        <div class="text-center py-4">
                            <div class="spinner-border text-success" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2 mb-0 small">Loading leaderboard...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Take Quiz CTA -->
            <div class="text-center mt-4">
                <p class="text-muted small mb-2">Want to see your name here?</p>
                <a href="/Home/Quiz" class="btn btn-success">
                    <i class="fas fa-play me-2"></i>Take the Quiz
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            await loadLeaderboard();
            await loadUserRank();
        });

        async function loadLeaderboard() {
            try {
                const response = await fetch('/api/leaderboard?top=50');
                if (!response.ok) throw new Error('Failed to load leaderboard');
                
                const data = await response.json();
                renderLeaderboard(data);
            } catch (error) {
                console.error('Error loading leaderboard:', error);
                document.getElementById('leaderboardList').innerHTML = `
                    <div class="text-center py-4 text-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <p class="mb-0 small">Failed to load. Please refresh.</p>
                    </div>
                `;
            }
        }

        async function loadUserRank() {
            const user = JSON.parse(localStorage.getItem('quizUser') || 'null');
            if (!user) return;

            try {
                const response = await fetch(`/api/leaderboard/rank/${user.id}`);
                if (!response.ok) return;
                
                const data = await response.json();
                if (data.success) {
                    document.getElementById('userRankCard').classList.remove('d-none');
                    document.getElementById('myRank').textContent = `#${data.rank}`;
                    document.getElementById('myName').textContent = user.name;
                    document.getElementById('myPhone').textContent = user.phoneNumber;
                    document.getElementById('myScore').textContent = data.score;
                    document.getElementById('myTotal').textContent = data.totalQuestions;
                    document.getElementById('myPercentage').textContent = data.percentage;
                }
            } catch (error) {
                console.error('Error loading user rank:', error);
            }
        }

        function renderLeaderboard(data) {
            const container = document.getElementById('leaderboardList');
            
            if (data.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fas fa-info-circle text-muted" style="font-size: 2rem;"></i>
                        <p class="mt-2 mb-0 text-muted small">No results yet. Be the first!</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = data.map((entry) => {
                let rankIcon = '';
                let rankClass = '';
                
                if (entry.rank === 1) {
                    rankIcon = 'ðŸ‘‘';
                    rankClass = 'rank-1';
                } else if (entry.rank === 2) {
                    rankIcon = 'ðŸ¥ˆ';
                    rankClass = 'rank-2';
                } else if (entry.rank === 3) {
                    rankIcon = 'ðŸ¥‰';
                    rankClass = 'rank-3';
                }

                const minutes = Math.floor(entry.timeTakenSeconds / 60);
                const seconds = entry.timeTakenSeconds % 60;
                const timeStr = `${minutes}m ${seconds}s`;

                return `
                    <div class="leaderboard-item ${rankClass} p-3 border-bottom d-flex align-items-center">
                        <div class="rank-badge bg-light text-dark me-3">
                            ${rankIcon || entry.rank}
                        </div>
                        <div class="flex-grow-1 overflow-hidden">
                            <h6 class="mb-0 text-truncate">${escapeHtml(entry.userName)}</h6>
                            <small class="text-muted">${timeStr}</small>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-success">${entry.score}/${entry.totalQuestions}</span>
                            <div class="small text-muted">${entry.percentage}%</div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
}
