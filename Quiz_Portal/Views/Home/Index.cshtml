@{
    ViewData["Title"] = "Home";
}

<div class="container py-3 py-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 text-center">
            <!-- Welcome Image -->
            <div class="mb-3">
                <img src="~/images/QuizMaster.jpg" alt="Bangladesh Quiz" class="img-fluid rounded-circle shadow" style="max-width: 120px; height: 120px; object-fit: cover;">
            </div>

            <!-- Get Started Section -->
            <div id="getStartedSection" class="card shadow border-0 mb-4">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3"><i class="fas fa-rocket me-2"></i>Get Started</h3>
                    <p class="text-muted mb-4 small">Join now and test your knowledge!</p>
                    <div class="d-grid gap-3">
                        <a href="/Home/SignUp" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Sign Up
                        </a>
                        <a href="/Home/Login" class="btn btn-outline-success btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    </div>
                </div>
            </div>

            <!-- Already Logged In Section -->
            <div id="loggedInSection" class="card shadow border-0 mb-4 d-none">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3"><i class="fas fa-user-check me-2 text-success"></i>Welcome Back!</h3>
                    <p id="welcomeMessage" class="mb-4"></p>
                    <div class="d-grid gap-3">
                        <a href="/Home/Quiz" class="btn btn-success btn-lg">
                            <i class="fas fa-play me-2"></i>Take Quiz
                        </a>
                        <a href="/Home/Leaderboard" class="btn btn-outline-success btn-lg">
                            <i class="fas fa-trophy me-2"></i>View Leaderboard
                        </a>
                    </div>
                </div>
            </div>

            <!-- Features Section -->
            <div class="row g-3 mt-2">
                <div class="col-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="text-success mb-2">
                                <i class="fas fa-question-circle" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title mb-1">20 Questions</h6>
                            <p class="card-text text-muted small d-none d-md-block">Test your knowledge</p>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="text-success mb-2">
                                <i class="fas fa-clock" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title mb-1">10s Timer</h6>
                            <p class="card-text text-muted small d-none d-md-block">Per question</p>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="text-success mb-2">
                                <i class="fas fa-trophy" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title mb-1">Leaderboard</h6>
                            <p class="card-text text-muted small d-none d-md-block">Compete & win</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const user = JSON.parse(localStorage.getItem('quizUser') || 'null');
            if (user) {
                document.getElementById('getStartedSection').classList.add('d-none');
                document.getElementById('loggedInSection').classList.remove('d-none');
                document.getElementById('welcomeMessage').textContent = `Hello, ${user.name}! Ready to test your knowledge?`;
            }
        });
    </script>
}
