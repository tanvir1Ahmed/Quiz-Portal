@{
    ViewData["Title"] = "Home";
}

<div class="container py-3 py-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 text-center">
            <!-- Welcome Image -->
            <div class="mb-3">
                <img src="~/images/Quizmaster%20Bkash%20Service%20New%20Logo%20HQ.png" alt="BD Quiz" class="img-fluid shadow" style="max-width: 150px; height: auto;">
            </div>

            <!-- Get Started Section -->
            <div id="getStartedSection" class="card shadow border-0 mb-4">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3"><i class="fas fa-rocket me-2"></i><span data-translate="getStarted">Get Started</span></h3>
                    <p class="text-muted mb-4 small" data-translate="joinNow">Join now and test your knowledge!</p>
                    <div class="d-grid gap-3">
                        <a href="/Home/SignUp" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus me-2"></i><span data-translate="signUp">Sign Up</span>
                        </a>
                        <a href="/Home/Login" class="btn btn-outline-success btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i><span data-translate="login">Login</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Already Logged In Section -->
            <div id="loggedInSection" class="card shadow border-0 mb-4 d-none">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3"><i class="fas fa-user-check me-2 text-success"></i><span data-translate="welcomeBack">Welcome Back!</span></h3>
                    <p id="welcomeMessage" class="mb-4"></p>
                    <div class="d-grid gap-3">
                        <a href="/Home/Quiz" class="btn btn-success btn-lg">
                            <i class="fas fa-play me-2"></i><span data-translate="takeQuiz">Take Quiz</span>
                        </a>
                        <a href="/Home/Leaderboard" class="btn btn-outline-success btn-lg">
                            <i class="fas fa-trophy me-2"></i><span data-translate="viewLeaderboard">View Leaderboard</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Features Section -->
            <div class="row g-3 mt-2">
                <div class="col-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="text-success mb-2">
                                <i class="fas fa-question-circle" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title mb-1" data-translate="questions">20 Questions</h6>
                            <p class="card-text text-muted small d-none d-md-block" data-translate="testKnowledge">Test your knowledge</p>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="text-success mb-2">
                                <i class="fas fa-clock" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title mb-1" data-translate="timer">10s Timer</h6>
                            <p class="card-text text-muted small d-none d-md-block" data-translate="perQuestion">Per question</p>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="text-success mb-2">
                                <i class="fas fa-trophy" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title mb-1" data-translate="leaderboard">Leaderboard</h6>
                            <p class="card-text text-muted small d-none d-md-block" data-translate="competeWin">Compete & win</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const user = JSON.parse(localStorage.getItem('quizUser') || 'null');
            if (user) {
                document.getElementById('getStartedSection').classList.add('d-none');
                document.getElementById('loggedInSection').classList.remove('d-none');
                updateWelcomeMessage(user.name);
            }
        });

        function updateWelcomeMessage(name) {
            const welcomeMsg = document.getElementById('welcomeMessage');
            welcomeMsg.textContent = t('readyToTest', { name: name });
        }

        window.addEventListener('languageChanged', function() {
            const user = JSON.parse(localStorage.getItem('quizUser') || 'null');
            if (user) {
                updateWelcomeMessage(user.name);
            }
        });
    </script>
}
